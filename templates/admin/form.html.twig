
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div style="margin-left:20%; margin-right:20%; margin-top:5%">

    {{ form_start(formAddSerie) }}
    {{ form_row(formAddSerie.titre)}}
    {{ form_row(formAddSerie.resume)}}
    {{ form_row(formAddSerie.premiereDiffusion)}}
    {{ form_row(formAddSerie.nbEpisodes)}}
    {{ form_row(formAddSerie.image)}}
    {% if type == "SerieTV" %}
    {{ form_row(formAddSerie.chaineDiffusion)}}
    {% endif %}
    {% if type == "WebSerie" %}
    {{ form_row(formAddSerie.site)}}
    {% endif %}
    {{ form_row(formAddSerie.lePays)}}
    {{ form_row(formAddSerie.lesGenres)}}
    <center>
        <button type="submit" class="btn btn-primary" name="myButton" value="">{{myButton}}</button>
    </center>
    {{ form_end(formAddSerie) }}

</div>
{% endblock %}
